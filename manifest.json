{
    "manifest_version": 3,
    "name": "ITU Helper",
    "version": "1.1.4",
    "description": "İTÜ'lülerin kullandığı çeşitli siteleri birbirine bağlayan ve daha akıcı bir deneyim sunan bir tarayıcı uzantısı.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "*://*.itu.edu.tr/*",
        "https://itu-helper.github.io/*",

        "https://ari24.com/*",
        "http://www.notkutusu.com/*",
        "https://itusenlikci.com/*",
        "https://ituprogram.com/*",
        "https://itusihirbaz.com/*"
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.itu.edu.tr/*",
                "https://itu-helper.github.io/*",

                "https://ari24.com/*",
                "http://www.notkutusu.com/*",
                "https://itusenlikci.com/*",
                "https://ituprogram.com/*",
                "https://itusihirbaz.com/*"
            ],
            "js": ["src/shared/sites-data.js", "src/content/content.js"],
            "css": [
                "src/styles/styles.css",
                "src/styles/navbar-styles.css",
                "css/fontawesome.min.css",
                "css/regular.min.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": ["https://ari24.com/*"],
            "css": ["src/styles/compatibility/ari24-styles.css"]
        },
        {
            "matches": ["http://www.notkutusu.com/*"],
            "css": ["src/styles/compatibility/notkutusu-styles.css"]
        },
        {
            "matches": ["https://www.mathavuz.itu.edu.tr/*"],
            "css": ["src/styles/compatibility/mathavuz-styles.css"]
        },
        {
            "matches": ["https://kutuphane.itu.edu.tr/*"],
            "css": ["src/styles/compatibility/library-styles.css"]
        },
        {
            "matches": ["https://yeni.webmail.itu.edu.tr/*", "https://webmail.itu.edu.tr/*", "https://klasik.webmail.itu.edu.tr/*"],
            "css": ["src/styles/compatibility/webmail-styles.css"]
        },
        {
            "matches": ["https://moodle.itu.edu.tr/*"],
            "css": ["src/styles/compatibility/moodle-styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["src/*", "css/*", "webfonts/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        },
        "default_title": "ITU Helper",
        "default_popup": "src/popup/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
