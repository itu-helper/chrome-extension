{
    "manifest_version": 3,
    "name": "ITU Helper",
    "version": "1.0",
    "description": "Helper extension for ITU students providing easy access to university websites",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "*://*.itu.edu.tr/*",
        "https://itu-helper.github.io/*",
        "https://ari24.com/*",
        "http://www.notkutusu.com/*",
        "https://itusenlikci.com/*",
        "https://ituprogram.com/*",
        "https://publications.ebsco.com/*"
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.itu.edu.tr/*",
                "https://itu-helper.github.io/*",
                "https://ari24.com/*",
                "http://www.notkutusu.com/*",
                "https://itusenlikci.com/*",
                "https://ituprogram.com/*",
                "https://publications.ebsco.com/*"
            ],
            "js": [
                "src/shared/sites-data.js", 
                "src/content/content.js"
            ],
            "css": ["src/styles/styles.css", "src/styles/navbar-styles.css"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/*"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        },
        "default_title": "ITU Helper",
        "default_popup": "src/popup/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
